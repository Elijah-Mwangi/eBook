<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/edit_round"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Welcome to eBook" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="242dp"
            android:layout_height="248dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_css"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/css" />

        </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_php"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/php" />

        <ImageButton
            android:id="@+id/btn_bootstrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boot" />

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/java" />

        <ImageButton
            android:id="@+id/btn_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/js" />

</LinearLayout>

    </LinearLayout>

</LinearLayout>